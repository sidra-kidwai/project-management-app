<div class="modal fade" id="timelog_modal" role="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title text-center"><%= action_name.capitalize %> Timelog</h4>
      </div>
      <div class="modal-body">
        <%= form_for([@project, @time_log], remote: true, html: { class: "text-center" }) do |f| %>
          <div id="errors"> </div>
          <div class="row">
            <div class="form-group col-md-12">
              <%= f.label :starting_time, class: 'col-md-3 text-center' %>
              <div class='input-group date col-md-8' id='datepicker-start'>
                <%= f.text_field :starting_time, required: true, class: "form-control" %>
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                </span>
              </div>
            </div>
            <div class="form-group col-md-12">
              <%= f.label  :ending_time, class: 'col-md-3 text-center' %>
              <div class='input-group date col-md-8' id='datepicker-end'>
                <%= f.text_field :ending_time, required: true, class: "form-control" %>
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                </span>
              </div>
            </div>
            <div class="actions">
              <%= f.submit class: "btn btn-success", data: { disable: true } %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <%= button_tag "Close", data: { dismiss: "modal" }, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>
