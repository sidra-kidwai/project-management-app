<div class="container">
  <div class="text-center">
    <h2>Project Details</h2>
    <div class="col-md-8 col-md-offset-2">
      <table class="table table-bordered table-sm heading-border">
        <tr>
          <td>
            <strong>Name:</strong>
          </td>
          <td>
            <text><%= @project.name %></text>
          </td>
        </tr>
        <tr>
          <td>
            <strong>Details:</strong>
          </td>
          <td>
            <text><%= @project.details %></text>
          </td>
        </tr>
      </table>
      <%= show_edit_button(@project) %>
      <%= show_delete_button(@project) %>
    </div>
  </div>
</div>
